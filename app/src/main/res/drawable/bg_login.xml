<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp nền xanh gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#09297C"
                android:centerColor="#0D3FA0"
                android:endColor="#0B53D7"
                android:angle="270" />
        </shape>
    </item>

    <!-- Lớp ánh sáng mờ trung tâm -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.35"
                android:gradientRadius="800dp"
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
